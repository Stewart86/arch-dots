{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "model": "anthropic/claude-sonnet-4-20250514",
  "autoshare": false,
  "autoupdate": true,
  "mcp": {
    "Context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "neon": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote@latest", "https://mcp.neon.tech/sse"]
    }
  }
}
