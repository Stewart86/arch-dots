# -----------------------------------------------------
# AUTOSTART
# -----------------------------------------------------

# -----------------------------------------------------
# Fastfetch
# -----------------------------------------------------
if [[ $(tty) == *"pts"* ]]; then
    fastfetch --config examples/21
else
    echo
    echo "Start Hyprland with command Hyprland"
    echo "Restart Hyprlock with 'reset_hyprlock'"
    if [ -z "$DISPLAY" ] && [ "$XDG_VTNR" -eq 1 ]; then
        mkdir -p ~/.cache
        exec Hyprland > ~/.cache/hyprland.log 2>&1
    fi
fi
