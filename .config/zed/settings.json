// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "indent_guides": {
        "background_coloring": "indent_aware"
    },
    "soft_wrap": "editor_width",
    "auto_signature_help": true,
    "minimap": {
        "show": "always"
    },
    "context_servers": {
        "perplexity": {
            "source": "custom",
            "command": "bun",
            "args": ["run", "/home/siwei/Projects/MCPServers/modelcontextprotocol/perplexity-ask"],
            "env": {
                "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
            }
        },
        "context7": {
            "source": "custom",
            "command": "bunx",
            "args": ["-y", "@upstash/context7-mcp@latest"]
        },
        "github": {
            "source": "custom",
            "command": "bunx",
            "args": ["-y", "@modelcontextprotocol/server-github"]
        }
    },
    "features": {
        "edit_prediction_provider": "zed"
    },
    "buffer_font_family": "JetBrains Mono",
    "buffer_font_features": {
        "ss01": true,
        "ss02": true,
        "ss20": true
    },
    "agent": {
        "inline_assistant_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4"
        },
        "default_profile": "write",
        "always_allow_tool_actions": true,
        "profiles": {
            "ask": {
                "name": "Ask",
                "tools": {
                    "contents": true,
                    "diagnostics": true,
                    "fetch": true,
                    "list_directory": false,
                    "now": true,
                    "find_path": true,
                    "read_file": true,
                    "grep": true,
                    "thinking": true
                },
                "enable_all_context_servers": true,
                "context_servers": {
                    "perplexity": {
                        "tools": {
                            "web_search": true,
                            "get_documentation": true
                        }
                    }
                }
            },
            "write": {
                "name": "Write",
                "tools": {
                    "project_notifications": true,
                    "web_search": true,
                    "contents": true,
                    "open": true,
                    "create_directory": true,
                    "terminal": true,
                    "batch_tool": true,
                    "code_actions": true,
                    "code_symbols": true,
                    "copy_path": true,
                    "create_file": true,
                    "delete_path": true,
                    "diagnostics": true,
                    "edit_file": true,
                    "fetch": true,
                    "list_directory": true,
                    "move_path": true,
                    "now": true,
                    "find_path": true,
                    "read_file": true,
                    "grep": true,
                    "rename": true,
                    "symbol_info": true,
                    "thinking": true
                },
                "enable_all_context_servers": true
            }
        },
        "default_model": {
            "provider": "openai",
            "model": "gpt-5"
        }
    },
    "vim_mode": true,
    "relative_line_numbers": true,
    "vertical_scroll_margin": 8,
    "ui_font_size": 13,
    "buffer_font_size": 10,
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Gruvbox Dark Hard"
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "inlay_hints": {
        "enabled": true
    },
    "git": {
        "inline_blame": {
            "enabled": true,
            "show_commit_summary": true
        }
    },
    "preferred_line_length": 160,
    "tab_size": 4,
    "lsp": {
        "tailwindcss-language-server": {
            "settings": {
                "classAttributes": ["class", "className", "ngClass", "styles"]
            }
        },
        "vtsls": {
            "settings": {
                "typescript": {
                    "tsserver": {
                        "maxTsServerMemory": 4096
                    },
                    "inlayHints": {
                        "parameterNames": {
                            "enabled": "all",
                            "suppressWhenArgumentMatchesName": true
                        },
                        "parameterTypes": {
                            "enabled": true
                        },
                        "variableTypes": {
                            "enabled": true,
                            "suppressWhenTypeMatchesName": true
                        },
                        "propertyDeclarationTypes": {
                            "enabled": false
                        },
                        "functionLikeReturnTypes": {
                            "enabled": false
                        },
                        "enumMemberValues": {
                            "enabled": false
                        }
                    }
                },
                "javascript": {
                    "tsserver": {
                        "maxTsServerMemory": 4096
                    },
                    "inlayHints": {
                        "parameterNames": {
                            "enabled": "all",
                            "suppressWhenArgumentMatchesName": false
                        },
                        "parameterTypes": {
                            "enabled": true
                        },
                        "variableTypes": {
                            "enabled": false,
                            "suppressWhenTypeMatchesName": true
                        },
                        "propertyDeclarationTypes": {
                            "enabled": true
                        },
                        "functionLikeReturnTypes": {
                            "enabled": true
                        },
                        "enumMemberValues": {
                            "enabled": true
                        }
                    }
                }
            }
        }
    },
    "languages": {
        "Markdown": {
            "format_on_save": "on"
        },
        "JavaScript": {
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            },
            "formatter": {
                "external": {
                    "command": "prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "TypeScript": {
            "inlay_hints": {
                "enabled": true,
                "show_parameter_hints": false,
                "show_other_hints": true,
                "show_type_hints": true
            }
        },
        "Python": {
            "language_servers": ["ruff", "pyright"],
            "format_on_save": "on",
            "formatter": ["auto"]
        }
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        // above is default from Zed
        "**/out",
        "**/dist",
        "**/.husky",
        "**/.turbo",
        "**/.next",
        "**/.storybook",
        "**/.tap",
        "**/.nyc_output",
        "**/report",
        "**/node_modules",
        "**/.vercel",
        "next-env.d.ts",
        "tsconfig.tsbuildinfo",
        "tsconfig.*.tsbuildinfo"
    ],
    "project_panel": {
        "button": true,
        "dock": "left",
        "git_status": true,
        "indent_size": 18,
        "entry_spacing": "standard"
    }
}
